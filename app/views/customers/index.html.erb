<!DOCTYPE html>
<html>
<head>
	<title>Index</title>
</head>

<body>
	    
	    <h3 class="label-grande">Listado de Usuarios del sistema:</h3>
	    <%= link_to 'Registrar nuevo cliente', new_customer_path,:class =>  'insertarbutton' %>
			<div class="background"><table class="table">
		<% @cust.each do |customer| %>
		<tr class="container-data">
			<td>Nombre: <%= customer.name %> <%= customer.last_name %></td>
			<td>DNI: <%=customer.document_number %></td>
			<td>cuil/cuit: <%= customer.cuil_cuit %></td>
			<td>Nacimiento: <%= customer.birthdate %></td>
            <td class="custom-cell">
                 <div ><%= link_to 'Eliminar', customer,method: :delete, :class=>'colorgeneric red'%></div>  
                 <div><%= link_to 'Editar', edit_customer_path(customer) , :class=>'colorgeneric ' %></div>    
                 <div><%= link_to 'Mostrar Datos y Estadisticas', customer_path(customer) , :class=>'colorgeneric ' %></div>   
                 <div><%= link_to 'Ver Facturas', customer_invoices_path(customer.id) , :class=>'colorgeneric ' %></div>
            </td>
             
		</tr>
		<% end %>
	</table>
   </div>
   <br>
   <br>
   <br>
	

</body>
</html>