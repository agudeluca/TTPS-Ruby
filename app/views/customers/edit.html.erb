<h1> nuevo usuario </h1>
<%= form_for (@customer)  do |cust| %>
<div class ="field">
  <%= cust.label "Nombre" %><br>
  <%=  cust.text_field :name,:required => true %>
  </div>
  <div class ="field">
  <%= cust.label "Apellido" %><br>
  <%=  cust.text_field :last_name,:required => true %>
  </div>
  <div class='field'>
      <%= cust.label :fecha_de_nacimiento %><br>
      <%= cust.date_field :birthdate,:required => true %>
    </div>
  <div class ="field">
   <%= cust.radio_button(:genre, "Male") %>
   <%= cust.label(:genre, "Hombre") %>
   <%= cust.radio_button(:genre, "Female") %>
   <%= cust.label(:genre, "Mujer") %>
   </div>
  <div class ="field">
  <%= cust.label "DNI" %><br>
  <%=  cust.text_field :document_number,:required => true %>
  </div>
  <div class ="field">
  <%= cust.label "CUIT/CUIL" %><br>
  <%=  cust.text_field :cuil_cuit,:required => true %>
  </div>
  <% if !@contacts.nil? %> 

  <% @contacts.each do |cont| %>
		  <%= fields_for "cont[]",cont do |contac| %>
		      <div class ="field">
		       <%= contac.label "Agregar tipo de contacto" %><br>
		       <%=  contac.text_field :type_contact,:required => true %>
		       </div>
		       <div class ="field">
		       <%= contac.label "Agregar contacto" %><br>
		       <%=  contac.text_field :contact_value,:required => true %>
		       </div>
     <% end %>
   <% end %>
   <% end %>
   <h3> Nuevo contacto (opcional) </h3>
   <%= fields_for :new_contact do |n| %>
          <div class='field'>
          <%= n.label "Agregar tipo de contacto" %><br>
          <%= n.text_field :type_contact %>
          </div>
          <div class='field'>
          <%= n.label "Agregar contacto" %><br>
          <%= n.text_field :contact_value %>
          </div>
        <% end %>
  <div class="actions">
     <%= cust.submit 'Guardar'%>
  </div>
  <%= link_to 'Volver', customers_path %>
  <% end %>




