<div class="form-new"><h3 class="label-grande"> Editar Usuario: </h3>
<%= form_for (@customer)  do |cust| %>
<div class ="field">
  <%= cust.label "Nombre",:class => "label-imputs" %><br>
  <%=  cust.text_field :name,:required => true,:class => 'imputs'%>
  </div>
  <div class ="field">
  <%= cust.label "Apellido",:class => "label-imputs" %><br>
  <%=  cust.text_field :last_name,:required => true ,:class => 'imputs'%>
  </div>
  <div class='field'>
      <%= cust.label :fecha_de_nacimiento,:class => "label-imputs" %><br>
      <%= cust.date_field :birthdate,:required => true,:class => 'imputs' %>
    </div>
  <div class ="field">
   <%= cust.radio_button(:genre, "Male") %>
   <%= cust.label(:genre, "Hombre") %>
   <%= cust.radio_button(:genre, "Female") %>
   <%= cust.label(:genre, "Mujer") %>
   </div>
  <div class ="field">
  <%= cust.label "DNI",:class => "label-imputs" %><br>
  <%=  cust.text_field :document_number,:required => true,:class => 'imputs' %>
  </div>
  <div class ="field">
  <%= cust.label "CUIT/CUIL" ,:class => "label-imputs"%><br>
  <%=  cust.text_field :cuil_cuit,:required => true,:class => 'imputs' %>
  </div>
  <% if !@contacts.nil? %> 

  <% @contacts.each do |cont| %>
		  <%= fields_for "cont[]",cont do |contac| %>
            <br>
         

<div class='field'>
        <%= contac.label :tipo_de_contacto ,:class => "label-imputs"%><br>
        <%= contac.select( :type_contact, [['Teléfono','phonenumber'],[ 'Email','email'],['Skype','skype'],[ 'Dirección','address'],['Twitter','twitter'],['Linkedin','linkedin']]) %> <br>  
        </div>
		       <div class ="field">
		       <%= contac.label "Agregar contacto",:class => "label-imputs" %><br>
		       <%=  contac.text_field :contact_value,:required => true,:class => 'imputs' %>
		       </div>
     <% end %>
   <% end %>
   <% end %>
   <h3 class="label-grande"> Nuevo Contacto (Opcional): </h3>
   <%= fields_for :new_contact do |n| %>
                    <div class='field'>
        <%= n.label :tipo_de_contacto,:class => "label-imputs" %><br>
        <%= n.select( :type_contact, [['Teléfono','phonenumber'],[ 'Email','email'],['Skype','skype'],[ 'Dirección','address'],['Twitter','twitter'],['Linkedin','linkedin']]) %> <br>  
        </div>
          <div class='field'>
          <%= n.label "Agregar contacto",:class => "label-imputs" %><br>
          <%= n.text_field :contact_value ,:class => 'imputs'%>
          </div>
        <% end %>
  <div class="actions">
     <%= cust.submit 'Guardar',:class => 'submit-class'%><%= link_to 'Volver', customers_path,:class => 'volver-class'  %>
  </div>
  
  <% end %>
  </div>
  <br>
  <br>
  




