<h1> nuevo usuario </h1>
<%= form_for (@customer)  do |cust| %>
<div class ="field">
  <%= cust.label "Nombre" %><br>
  <%=  cust.text_field :name %>
  </div>
  <div class ="field">
  <%= cust.label "Apellido" %><br>
  <%=  cust.text_field :last_name %>
  </div>
  <div class ="field">
  <%= cust.label "Fecha de nacimiento" %><br>
  <%=  cust.text_field :birthdate %>
  </div>
  <div class ="field">
  <%= cust.label "Sexo" %><br>
  <%=  cust.text_field :genre %>
  </div>
  <div class ="field">
  <%= cust.label "DNI" %><br>
  <%=  cust.text_field :document_number %>
  </div>
  <div class ="field">
  <%= cust.label "CUIT/CUIL" %><br>
  <%=  cust.text_field :cuil_cuit %>
  </div>
  <% @contacts.each do |cont| %>
		  <%= fields_for "cont[]",cont do |contac| %>
		      <div class ="field">
		       <%= contac.label "Agregar tipo de contacto" %><br>
		       <%=  contac.text_field :type_contact %>
		       </div>
		       <div class ="field">
		       <%= contac.label "Agregar contacto" %><br>
		       <%=  contac.text_field :contact_value %>
		       </div>
     <% end %>
   <% end %>
   <h3> Nuevo contacto (opcional) </h3>
   <%= fields_for :new_contact do |n| %>
          <div class='field'>
          <%= n.label "Agregar tipo de contacto" %><br>
          <%= n.text_field :type_cont %>
          </div>
          <div class='field'>
          <%= n.label "Agregar contacto" %><br>
          <%= n.text_field :value_cont %>
          </div>
        <% end %>
  <div class="actions">
     <%= cust.submit 'Guardar'%>
  </div>
  <% end %>



