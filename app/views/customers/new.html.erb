<div class="form-new"><h3 class="label-grande"> Nuevo Usuario: </h3>
<%= form_for (@customer)  do |cust| %>
<div class ="field">
  <%= cust.label "Nombre",:class => "label-imputs" %><br>
  <%=  cust.text_field :name,:required => true,:placeholder => "ingrese un nombre",:class => 'imputs' %>
  </div>
  <div class ="field">
  <%= cust.label "Apellido",:class => "label-imputs"  %><br>
  <%=  cust.text_field :last_name,:required => true,:placeholder => "ingrese un apellido",:class => 'imputs' %>
  </div>
  <div class='field'>
      <%= cust.label :fecha_de_nacimiento ,:class => "label-imputs" %><br>
      <%= cust.date_field :birthdate,:required => true,:class => 'imputs' %>
    </div>
  <div class ="field">
   <%= cust.radio_button(:genre, "Male") %>
   <%= cust.label(:genre, "Hombre") %>
   <%= cust.radio_button(:genre, "Female") %>
   <%= cust.label(:genre, "Mujer") %>
   </div>
  <div class ="field">
  <%= cust.label "DNI" ,:class => "label-imputs" %><br>
  <%=  cust.text_field :document_number,:required => true,:placeholder => "ingrese un dni de 8 digitos",:class => 'imputs' %>
  </div>
  <div class ="field">
  <%= cust.label "CUID/CUIL  ",:class => "label-imputs"%><br>
  <%=  cust.text_field :cuil_cuit,:required => true,:placeholder => "NN-NNNNNNNN-N" ,:class => 'imputs'%>
  </div>
		  <%= fields_for(:contacts) do |contac| %>
		  
           <div class='field'>
        <%= contac.label :tipo_de_contacto,:class => "label-imputs"  %><br>
        <%= contac.select( :type_contact, [['Teléfono','phonenumber'],[ 'Email','email'],['Skype','skype'],[ 'Dirección','address'],['Twitter','twitter'],['Linkedin','linkedin']]) %> <br>  
        </div>
		       <div class ="field">
		       <%= contac.label "Agregar contacto" ,:class => "label-imputs" %><br>
		       <%=  contac.text_field :contact_value,:required => true,:placeholder => "ingrese el contacto",:class => 'imputs' %>
		       </div>
   <% end %>

  <div class="actions">
     <%= cust.submit 'Guardar' ,:class => 'submit-class'%><%= link_to 'Volver', customers_path ,:class => 'volver-class'%>
  </div>
  </div>
  
  <% end %>
