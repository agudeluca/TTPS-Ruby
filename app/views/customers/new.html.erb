<h1> nuevo usuario </h1>
<%= form_for (@customer)  do |cust| %>
<div class ="field">
  <%= cust.label "Nombre" %><br>
  <%=  cust.text_field :name,:required => true %>
  </div>
  <div class ="field">
  <%= cust.label "Apellido" %><br>
  <%=  cust.text_field :last_name,:required => true %>
  </div>
  <div class='field'>
      <%= cust.label :fecha_de_nacimiento %><br>
      <%= cust.date_field :birthdate,:required => true %>
    </div>
  <div class ="field">
   <%= cust.radio_button(:genre, "Male") %>
   <%= cust.label(:genre, "Hombre") %>
   <%= cust.radio_button(:genre, "Female") %>
   <%= cust.label(:genre, "Mujer") %>
   </div>
  <div class ="field">
  <%= cust.label "DNI" %><br>
  <%=  cust.text_field :document_number,:required => true,:placeholder => "ingrese un dni de 8 digitos" %>
  </div>
  <div class ="field">
  <%= cust.label "CUID/CUIL "%><br>
  <%=  cust.text_field :cuil_cuit,:required => true,:placeholder => "NN-NNNNNNNN-N" %>
  </div>
		  <%= fields_for(:contacts) do |contac| %>
		  
           <div class='field'>
        <%= contac.label :tipo_de_contacto %><br>
        <%= contac.select( :type_contact, [['Teléfono','phonenumber'],[ 'Email','email'],['Skype','skype'],[ 'Dirección','address'],['Twitter','twitter'],['Linkedin','linkedin']]) %> <br>  
        </div>
		       <div class ="field">
		       <%= contac.label "Agregar contacto" %><br>
		       <%=  contac.text_field :contact_value,:required => true %>
		       </div>
   <% end %>
  <div class="actions">
     <%= cust.submit 'Guardar'%>
  </div>
  <%= link_to 'Volver', customers_path %>
  <% end %>
